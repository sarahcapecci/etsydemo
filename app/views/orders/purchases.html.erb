<h2>Purchase History</h2>
<div class="row">
  <% @orders.each do |order| %>
    <div class="col-md-3 home-listing">
      <div class="thumbnail">
      <div class="equipment-img" style="background-image: url(<%= order.listing.image.url %>)"></div>
        <div class="caption">
          <h3><%= order.listing.name %></h3> 
          <p><i class="fa fa-tag"></i><%= order.listing.season %></p>
          <p><i class="fa fa-money"></i><%= number_to_currency(order.listing.price) %></p>
          <p><i class="fa fa-user"></i> Sold by by: <%= order.seller.name %></p>
          <p><i class="fa fa-clock"></i> Date purchased: <%= order.created_at.strftime("%B %-d, %Y") %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>