<h2>Ordered Equipments</h2>
<div class="row">
  <% @orders.each do |order| %>
    <div class="col-md-3">
      <div class="thumbnail">
      <%= link_to image_tag(order.listing.image.url) %>
        <div class="caption">
          <h3><%= order.listing.name %></h3> 
          <p><i class="fa fa-tag"></i> <%= order.listing.season %></p>
          <p><i class="fa fa-money"></i> <%= number_to_currency(order.listing.price) %></p>
          <p><i class="fa fa-user"></i> Ordered by: <%= order.buyer.name %></p>
          <p><i class="fa fa-clock"></i> Orderded on <%= order.created_at.strftime("%B %-d, %Y") %></p> 
          
        </div>
      </div>
    </div>
  <% end %>
</div>