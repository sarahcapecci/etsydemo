<header>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">Speqo</a>
      </div>
      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav relative">
          <li><%= link_to "About", pages_about_path %></li>
          <li><%= link_to "Contact", pages_contact_path %></li>
          <% if user_signed_in? %>
          <li class="dropdown"><span><i class="fa fa-user"></i><%= current_user.name %></span>
              <ul>
                <li><%= link_to "Edit Profile", edit_user_registration_path %></li>
                <li><%= link_to "My Listings", seller_path %></li>
                <li><%= link_to "Sales History", sales_path %></li>
                <li><%= link_to "Purchases History", purchases_path %></li>
                <li class="red"><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
              </ul>
          </li>
          <li><%= link_to 'New Listing +', new_listing_path, class: "new-listing", data: {no_turbolink: true} %></li>
          <% else %>
          <li><%= link_to "Sign Up", new_user_registration_path %></li>
          <li><%= link_to "Log In", new_user_session_path %></li>
          <% end %>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>
